# Given a string, find the length of the longest substring without repeating characters.

# Input: "abcabcbb"
# Output: 3
# Explanation: The answer is "abc", with the length of 3.



def longest_substring(s, cnt_list):
    new_list = list(s)
    temp_list = []
    new_s = ''
    cnt = 0
    for i in range(len(new_list)):
        if new_list[i] not in temp_list:
            temp_list.append(new_list[i])
            cnt += 1
            new_s = ''
        else:
            cnt_list.append(cnt)
            new_s = ''.join(new_list[len(temp_list):])
            if len(new_s) > 1:
                longest_substring(new_s, cnt_list)
                return
            else:
                break
    cnt_list.append(cnt)
    print('The largest substring count is {0}'.format(max(cnt_list)))



s = 'abcabcbbqwertyuiop'
longest_substring(s, cnt_list=[])
